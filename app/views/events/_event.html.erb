<div id="<%= dom_id event %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Start at:</strong>
    <%= event.start_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End at:</strong>
    <%= event.end_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Recurrence rule:</strong>
    <%= event.recurrence_rule %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Recurrence frequency:</strong>
    <%= event.recurrence_frequency %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Recurrence end date:</strong>
    <%= event.recurrence_end_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Postponed until:</strong>
    <%= event.postponed_until %>
  </p>

</div>
