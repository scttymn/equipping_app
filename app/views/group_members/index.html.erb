<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Group members" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Group members</h1>
    <%= link_to "New group member", new_group_member_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="group_members" class="min-w-full">
    <% @group_members.each do |group_member| %>
      <%= render group_member %>
      <p>
        <%= link_to "Show this group member", group_member, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
